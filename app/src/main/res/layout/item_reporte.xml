<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <ImageView
        android:id="@+id/imagen_cpte_item"
        android:layout_width="23dp"
        android:layout_height="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:contentDescription="@string/vacio"
        android:src="@drawable/cobranza" />

    <TextView
        android:id="@+id/txtclientepago"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imagen_cpte_item"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_toRightOf="@+id/imagen_cpte_item"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#000000"
        android:text="@string/filler"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtformapago"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imagen_cpte_item"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_bold"
        android:layout_below="@+id/imagen_cpte_item"
        android:textColor="#000000"
        android:text="@string/filler" />



    <TextView
        android:id="@+id/txtImportepago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtfactura"
        android:layout_alignBottom="@+id/txtfactura"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#000000"
        android:text="@string/filler" />


    <TextView
        android:id="@+id/txtfactura"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtformapago"
        android:layout_alignBottom="@+id/txtformapago"
        android:layout_toRightOf="@+id/txtformapago"
        android:textColor="#000000"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/filler" />

</RelativeLayout>